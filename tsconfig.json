{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    // alias 설정
    "baseUrl": ".",
    "paths": {
      "@providers/*": ["src/providers/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@routes/*": ["src/routes/*"],
      "@layout/*": ["src/layout/*"],
      "@type/*": ["src/type/*"], // types는 불가능해서 type으로 대체
      "@utils/*": ["src/utils/*"],
      "@assets/*": ["src/assets/*"],
      "@server/*": ["src/server/*"],
      "@zustand/*": ["src/zustand/*"],
      "@recoil/*": ["src/recoil/*"],
      "@axios/*": ["src/axios/*"],
      "@screens/*": ["src/screens/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
